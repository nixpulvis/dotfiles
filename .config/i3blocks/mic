DEFAULT_SOURCE=$(pactl info | grep "Default Source" | cut -d' ' -f3)

# Check mouse event
case $BLOCK_BUTTON in
    3)
    /usr/bin/pactl set-source-mute $DEFAULT_SOURCE toggle;  # PulseAudio
esac

# Determine mic's state
state=$(pactl get-source-mute $DEFAULT_SOURCE | cut -d' ' -f2)

# Toggle mic's state
case $state in
    yes)
    echo "  mute";
    exit 0;
    ;;
    no)
    echo "  open ";
    exit 33;
    ;;
    *)
    echo "no audio";
    exit 0;
    ;;
esac

exit 0;
