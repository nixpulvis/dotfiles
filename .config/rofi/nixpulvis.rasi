* {
    foreground:                  #cacaca;
    normal-foreground:           @foreground;
    alternate-normal-foreground: @foreground;
    alternate-normal-background: @background;

    background:        #161616;
    background-color:  @background;
    normal-background: @background;

    border-color:   #ff8000;
    separatorcolor: @foreground;

    selected-normal-foreground: @background;
    selected-normal-background: @foreground;

    /* TODO */
    active-foreground:           rgba(255, 0, 0, 100%);
    active-background:           rgba(0, 255, 0, 100%);
    alternate-active-foreground: @active-foreground;
    alternate-active-background: rgba(0, 255, 0, 100%);
    selected-active-foreground:  rgba(0, 255, 0, 100%);
    selected-active-background:  rgba(0, 255, 0, 100%);

    /* TODO */
    urgent-foreground:           rgba(0, 255, 0, 100%);
    urgent-background:           rgba(0, 255, 0, 100%);
    alternate-urgent-foreground: @urgent-foreground;
    alternate-urgent-background: rgba(0, 255, 0, 100%);
    selected-urgent-foreground:  rgba(0, 255, 0, 100%);
    selected-urgent-background:  rgba(0, 255, 0, 100%);
}

window {
    width:            100%;
    background-color: @background;
    border:           2;
    padding:          0;
}

mainbox {
    border:  0;
    padding: 0;
}

inputbar {
    spacing:    0;
    text-color: @normal-foreground;
    padding:    3px 4px 0px;
}

prompt, button {
    spacing:    0;
    text-color: @normal-foreground;
}

entry {
    spacing:    0;
    text-color: @normal-foreground;
}

