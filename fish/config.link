#=>~/.config/fish/config.fish
# This file is just here to source other files, that actually do work,
# it's super lazy and should move out of it's mother's basement.

set -x DOTFILES $HOME/.dotfiles

# Source all .fish files.
for source in $DOTFILES/**/*.fish; source $source; end

# If we are a login shell start the WM.
if status --is-login
  if test -z "$DISPLAY" -a "$XDG_VTNR = 1"
    exec startx
  end
end
