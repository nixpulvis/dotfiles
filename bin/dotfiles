#!/usr/bin/env ruby
#      __         ___            __        ____
#    _/ /       _/_(_)___  _____/ /_____ _/ / /
#   / __/     _/_// / __ \/ ___/ __/ __ `/ / / 
#  (_  )  _ _/_/ / / / / (__  ) /_/ /_/ / / /  
# /  _/  (_)_/  /_/_/ /_/____/\__/\__,_/_/_/   
# /_/                                          
#

def add_loadpath(new_path)
  included = $LOAD_PATH.inject(false) do |acc,path|
    acc || new_path == File.expand_path(path)
  end
  $LOAD_PATH.unshift new_path unless included
end
add_loadpath File.expand_path('../../lib', __FILE__)
require "dotfiles"

dotfiles = Dir["#{Dotfiles::SYMLINK_PATH}/**/{*,.*}"].select {|p| File.file? p}
symlink dotfiles, Dir.home, force: true